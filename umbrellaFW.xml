<config xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs" tags="merge">
    <device>
      <name>{$DEVICE_NAME}</name>
    <config>
      <crypto xmlns="urn:ios">
        <ikev2>
          <keyring>
            <name>umbrella</name>
            <peer>
              <name>umbrella</name>
              <address>
                <ipv4-address>146.112.83.2</ipv4-address>
              </address>
              <pre-shared-key>
                <secret>{$SECRET}</secret>
              </pre-shared-key>
            </peer>
          </keyring>
          <proposal>
            <name>umbrella</name>
            <encryption>aes-cbc-256</encryption>
            <prf>sha1</prf>
            <prf>sha256</prf>
            <prf>sha384</prf>
            <prf>sha512</prf>
            <integrity>sha1</integrity>
            <group>19</group>
            <group>14</group>
          </proposal>
          <policy>
            <name>umbrella</name>
            <proposal>umbrella</proposal>
            <match>
              <address>
                <local>
                  <address>{$WAN_IP}</address>
                </local>
              </address>
            </match>
          </policy>
          <profile>
            <name>umbrella</name>
            <match>
              <identity>
                <remote>
                  <address>
                    <name>146.112.83.2</name>
                    <mask>255.255.255.255</mask>
                  </address>
                </remote>
              </identity>
            </match>
            <identity>
              <local>
                <email>{$TUNNELID}</email>
              </local>
            </identity>
            <authentication>
              <local>
                <pre-share/>
              </local>
              <remote>
                <pre-share/>
              </remote>
            </authentication>
            <keyring>
              <local>umbrella</local>
            </keyring>
            <dpd>
              <interval>10</interval>
              <retry-interval>2</retry-interval>
              <queries>periodic</queries>
            </dpd>
          </profile>
        </ikev2>
        <ipsec>
          <transform-set>
            <name>umbrella</name>
            <transform2>esp-aes</transform2>
            <transform2-bits>256</transform2-bits>
            <transform3>esp-sha-hmac</transform3>
            <mode>
              <tunnel/>
            </mode>
          </transform-set>
          <profile>
            <name>umbrella</name>
            <set>
              <transform-set>umbrella</transform-set>
              <ikev2-profile>umbrella</ikev2-profile>
            </set>
          </profile>
        </ipsec>
      </crypto>
      <interface xmlns="urn:ios">
        <Tunnel>
          <name>3</name>
          <ip>
            <unnumbered>
              <GigabitEthernet>0/0/1</GigabitEthernet>
            </unnumbered>
          </ip>
          <tunnel>
            <source>GigabitEthernet0/0/1</source>
            <destination>146.112.83.2</destination>
            <mode>
              <ipsec>
                <ipv4/>
              </ipsec>
            </mode>
            <protection>
              <ipsec>
                <profile>umbrella</profile>
              </ipsec>
            </protection>
          </tunnel>
        </Tunnel>
      </interface>
    </config>
  </device>
 </devices>
</config>
