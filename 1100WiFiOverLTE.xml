<config xmlns="http://tail-f.com/ns/config/1.0">
 <devices xmlns="http://tail-f.com/ns/ncs" tags="merge">
  <device>
    <name>{$DEVICE_NAME}</name>
    <config>
      <ip xmlns="urn:ios">
        <dhcp>
          <excluded-address>
            <low-high-list>
              <low>192.168.10.2</low>
              <high>192.168.10.12</high>
            </low-high-list>
          </excluded-address>
          <pool>
            <id>Computers</id>
            <network>
              <network-number>192.168.10.0</network-number>
              <mask>255.255.255.0</mask>
            </network>
            <dns-server>8.8.8.8</dns-server>
            <default-router>192.168.10.1</default-router>
            <lease>
              <infinite/>
            </lease>
          </pool>
        </dhcp>
        <http>
          <client>
            <source-interface>
              <GigabitEthernet>0/0/0</GigabitEthernet>
            </source-interface>
          </client>
        </http>
        <nat>
          <inside>
            <source>
              <list>
                <id>NAT</id>
                <interface>GigabitEthernet0/0/0</interface>
                <overload/>
              </list>
            </source>
          </inside>
        </nat>
        <access-list>
          <standard>
            <std-named-acl>
              <name>NAT</name>
              <std-access-list-rule>
                <rule>permit 192.168.10.0 0.0.0.255</rule>
              </std-access-list-rule>
            </std-named-acl>
          </standard>
        </access-list>
      </ip>
      <interface xmlns="urn:ios">
        <Loopback>
          <name>0</name>
          <ip>
            <address>
              <primary>
                <address>192.168.100.100</address>
                <mask>255.255.255.0</mask>
              </primary>
            </address>
          </ip>
        </Loopback>
        <GigabitEthernet>
          <name>0/0/0</name>
          <ip>
            <no-address>
              <address xmlns:nc="urn:ietf:params:xml:ns:netconf:base:1.0"
                       nc:operation="delete"/>
            </no-address>
            <address>
              <dhcp/>
            </address>
            <nat>
              <outside/>
            </nat>
          </ip>
        </GigabitEthernet>
        <Vlan>
          <name>1</name>
          <ip>
            <no-address>
              <address xmlns:nc="urn:ietf:params:xml:ns:netconf:base:1.0"
                       nc:operation="delete"/>
            </no-address>
            <address>
              <primary>
                <address>192.168.10.1</address>
                <mask>255.255.255.0</mask>
              </primary>
            </address>
            <nat>
              <inside/>
            </nat>
          </ip>
        </Vlan>
      </interface>
      <ntp xmlns="urn:ios">
        <server>
          <peer-list>
            <name>time.google.com</name>
            <source>
              <GigabitEthernet>0/0/0</GigabitEthernet>
            </source>
          </peer-list>
        </server>
      </ntp>
    </config>
  </device>
 </devices>
</config>
