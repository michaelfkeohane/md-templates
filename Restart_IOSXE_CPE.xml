<config xmlns="http://tail-f.com/ns/config/1.0">
 <devices xmlns="http://tail-f.com/ns/ncs" tags="merge">
  <device>
    <name>{$DEVICE_NAME}</name>
    <config>
      <event xmlns="urn:ios">
        <manager>
          <applet>
            <name>Reboot</name>
            <event>
              <timer>
                <trigger>countdown</trigger>
                <time>{$Seconds_To_Delay_Before_Reboot}</time>
		<maxrun>60</maxrun>
              </timer>
            </event>
            <action>
              <name>0.5</name>
              <cli>
                <command>enable</command>
              </cli>
            </action>
            <action>
              <name>1.5</name>
              <cli>
                <command>config t</command>
              </cli>
            </action>
            <action>
              <name>2.0</name>
              <cmd>reload</cmd>
            </action>
            <action>
              <name>5.0</name>
              <cli>
                <command>end</command>
              </cli>
            </action>
            <action>
              <name>7.0</name>
              <syslog>
                <msg>reloading box</msg>
              </syslog>
            </action>
          </applet>
          <applet>
            <name>DELETEEVENT</name>
            <event>
              <syslog>
                <pattern>%SYS-5-RESTART</pattern>
              </syslog>
            </event>
            <action>
              <name>1.0</name>
              <cli>
                <command>enable</command>
              </cli>
            </action>
            <action>
              <name>1.5</name>
              <cli>
                <command>config t</command>
              </cli>
            </action>
            <action>
              <name>1.6</name>
              <cli>
                <command>file prompt quiet</command>
              </cli>
            </action>
            <action>
              <name>1.7</name>
              <cli>
                <command>no event manager applet Reboot</command>
              </cli>
            </action>
            <action>
              <name>1.8</name>
              <cli>
                <command>end</command>
              </cli>
            </action>
          </applet>
        </manager>
      </event>
    </config>
  </device>
 </devices>
</config>
